<Window x:Class="Super_Market.pages.MenuPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Super_Market.pages"
        mc:Ignorable="d"
        Title="Super Market Management System" Height="587" Width="1176" WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="/pages/icon.png">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="529" Width="660" VerticalAlignment="Center">
            <Label x:Name="welcomeMsg" Content="Welcome To" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontStyle="Italic" FontSize="22"/>
            <Label x:Name="appTitle" Content="Super Market Management System" HorizontalAlignment="Center" Height="56" VerticalAlignment="Top" Width="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="36" Margin="0,20,0,0"/>
            <Button x:Name="customerManagementBtn" Content="Customer Management" HorizontalAlignment="Center" Height="80" Margin="0,184,0,0" VerticalAlignment="Top" Width="544" FontSize="14" FontWeight="Bold" Cursor="Hand" Click="customerManagementBtn_Click"/>
            <Button x:Name="logOutBtn" Content="Log Out" HorizontalAlignment="Center" Height="80" Margin="0,393,0,0" VerticalAlignment="Top" Width="544" FontSize="14" FontWeight="Bold" Cursor="Hand" Click="logOutBtnBtn_Click"/>
            <Button x:Name="productManagementBtn" Content="Product Management" HorizontalAlignment="Center" Height="80" Margin="0,289,0,0" VerticalAlignment="Top" Width="544" FontSize="14" FontWeight="Bold" Cursor="Hand" Click="productManagementBtn_Click"/>

        </Grid>
    </Grid>
</Window>
