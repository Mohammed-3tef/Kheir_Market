<Window x:Class="Super_Market.pages.CustomerManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Super_Market.pages"
        mc:Ignorable="d"
        Title="Super Market Management System" Height="839" Width="1605" Icon="/pages/icon.png" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="681" Width="1380" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="appTitle" Content="Customer Management" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="36" Margin="370,0,0,0" Grid.ColumnSpan="2"/>
            <TabControl Height="501" Margin="0,97,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="1380" Grid.ColumnSpan="2">
                <TabItem Header="Update Customer">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid HorizontalAlignment="Left" Height="474" VerticalAlignment="Center" Width="687" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="687,0,0,0"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Delete Customer">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid HorizontalAlignment="Left" Height="474" VerticalAlignment="Center" Width="687" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="687,0,0,0"/>

                    </Grid>
                </TabItem>
            </TabControl>
            <Button x:Name="backToMenuBtn" Content="Back to menu" HorizontalAlignment="Left" Margin="0,622,0,10" Width="1380" FontWeight="Bold" FontSize="14" Cursor="Hand" Click="backToMenuBtn_Click" Grid.ColumnSpan="2"/>

        </Grid>
    </Grid>
</Window>
