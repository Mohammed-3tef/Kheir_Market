<Window x:Class="Super_Market.pages.ProductManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Super_Market.pages"
        mc:Ignorable="d"
        Title="Super Market Management System" Height="791" Width="1557" WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="/pages/icon.png">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="681" Width="1380" VerticalAlignment="Bottom" Margin="0,0,0,47">
            <Label x:Name="appTitle" Content="Product Management" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="36" Margin="370,0,0,0" Grid.ColumnSpan="2"/>
            <TabControl Height="496" Margin="0,97,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="1380">
                <TabItem Header="Add Product">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid HorizontalAlignment="Left" Height="468" VerticalAlignment="Center" Width="687" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="687,0,0,0"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Update Product">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid HorizontalAlignment="Left" Height="468" VerticalAlignment="Center" Width="687" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="687,0,0,0"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Delete Product">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid HorizontalAlignment="Left" Height="468" VerticalAlignment="Center" Width="687" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="687,0,0,0"/>

                    </Grid>
                </TabItem>
            </TabControl>
            <Button x:Name="backToMenuBtn" Content="Back to menu" HorizontalAlignment="Center" Margin="0,622,0,10" Width="1380" FontWeight="Bold" FontSize="14" Cursor="Hand" Click="backToMenuBtn_Click"/>

        </Grid>
    </Grid>
</Window>
