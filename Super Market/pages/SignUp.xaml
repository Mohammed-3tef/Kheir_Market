<Window x:Class="Super_Market.pages.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Super_Market.pages"
        mc:Ignorable="d"
        Title="Super Market Management System" Height="655" Width="1303" WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="/pages/icon.png">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="580" Width="660" VerticalAlignment="Center">
            <Label x:Name="welcomeMsg" Content="Welcome To" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontStyle="Italic" FontSize="22"/>
            <Label x:Name="appTitle" Content="Super Market Management System" HorizontalAlignment="Center" Height="56" VerticalAlignment="Top" Width="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="36" Margin="0,20,0,0"/>
            <Grid Margin="0,97,0,0" HorizontalAlignment="Center" Width="492">
                <Label Content="Sign Up" HorizontalAlignment="Center" Height="57" Margin="0,10,0,0" VerticalAlignment="Top" Width="180" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="36" FontWeight="Bold"/>
                <Grid HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top">
                    <Label x:Name="usernameLabel" Content="Username:" HorizontalAlignment="Right" Height="33" Margin="0,2,393,0" VerticalAlignment="Top" Width="99" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBox x:Name="usernameInput" HorizontalAlignment="Right" VerticalAlignment="Top" Width="487" Height="25" Margin="0,35,0,0" FontStyle="Italic" TextChanged="usernameInput_TextChanged"/>
                </Grid>
                <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="492" Margin="0,149,0,0">
                    <Label x:Name="emailLabel" Content="Email:" HorizontalAlignment="Right" Height="31" VerticalAlignment="Top" Width="95" FontWeight="Bold" FontSize="14" Margin="0,0,397,0"/>
                    <TextBox x:Name="emailInput" HorizontalAlignment="Right" Height="25" Margin="0,31,0,0" VerticalAlignment="Top" Width="487" FontStyle="Italic" TextChanged="emailInput_TextChanged"/>
                </Grid>
                <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="492" Margin="0,210,0,0">
                    <Label x:Name="passwordLabel" Content="Password:" HorizontalAlignment="Right" Height="31" VerticalAlignment="Top" Width="129" FontWeight="Bold" FontSize="14" Margin="0,0,363,0"/>
                    <TextBox x:Name="passwordInput" HorizontalAlignment="Right" Height="25" Margin="0,31,0,0" VerticalAlignment="Top" Width="487" FontStyle="Italic" TextChanged="passwordInput_TextChanged"/>
                </Grid>
                <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="492" Margin="0,271,0,0">
                    <Label x:Name="confirmPasswordLabel" Content="Confirm Password:" HorizontalAlignment="Right" Height="31" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Margin="0,0,343,0" Width="149"/>
                    <TextBox x:Name="confirmPasswordInput" HorizontalAlignment="Right" Height="25" Margin="0,31,0,0" VerticalAlignment="Top" Width="487" FontStyle="Italic" TextChanged="confirmPasswordInput_TextChanged"/>
                </Grid>
                <Button x:Name="signUpBtn" Content="Sign Up" HorizontalAlignment="Right" Margin="0,432,0,10" Width="487" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="signUpBtn_Click"/>
                <Button x:Name="logInBtn" Content="Have an account ? Log In" HorizontalAlignment="Left" Margin="5,376,0,65" Width="487" FontWeight="Bold" FontSize="16" Cursor="Hand" Click="logInBtn_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
